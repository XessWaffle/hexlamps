<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.hexbow.lamp.Lamp
        android:id="@+id/lamp2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/sync"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lamp1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.hexbow.lamp.Lamp
        android:id="@+id/lamp6"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lamp5"
        app:layout_constraintTop_toBottomOf="@+id/power" />

    <com.example.hexbow.lamp.Lamp
        android:id="@+id/lamp5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lamp6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/power" />

    <com.example.hexbow.lamp.Lamp
        android:id="@+id/lamp3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintBottom_toTopOf="@+id/power"
        app:layout_constraintEnd_toStartOf="@+id/lamp4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sync" />

    <com.example.hexbow.lamp.Lamp
        android:id="@+id/lamp4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/power"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lamp3"
        app:layout_constraintTop_toBottomOf="@+id/sync" />

    <com.example.hexbow.lamp.Lamp
        android:id="@+id/lamp1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toTopOf="@+id/sync"
        app:layout_constraintEnd_toStartOf="@+id/lamp2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sync"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/hexagon"
        android:foregroundTint="@color/white"
        android:text="Sync"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/lamp4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lamp1" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/hexagon"
        android:foregroundTint="@color/white"
        android:text="Get"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/power"
        app:layout_constraintEnd_toStartOf="@+id/lamp4"
        app:layout_constraintStart_toEndOf="@+id/lamp3"
        app:layout_constraintTop_toBottomOf="@+id/sync" />

    <Button
        android:id="@+id/power"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/hexagon"
        android:foregroundTint="@color/white"
        android:text="On"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/lamp5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lamp4" />

</androidx.constraintlayout.widget.ConstraintLayout>